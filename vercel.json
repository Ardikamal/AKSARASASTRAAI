{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "static/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.py"
        },
        {
            "src": "/(.*\\.txt)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}